
config listen 'listen'
	option ipv4 '0.0.0.0'
	option port '21'
	option dataport '20'
	option enable4 '0'
	option enable6 '1'
	option pasv_min_port '50000'
	option pasv_max_port '51000'
	option ipv6 '::0'

config local 'local'
	option enabled '1'

config global 'global'
	option write '1'
	option download '1'
	option dotfile '0'
	option umask '022'
	option dirlist '1'
	option dirmsgfile '.message'
	option lsrecurse '1'

config connection 'connection'
	option portmode '1'
	option pasvmode '1'
	option ascii 'both'
	option idletimeout '1800'
	option conntimeout '120'
	option dataconntimeout '120'
	option maxclient '0'
	option maxperip '0'
	option maxrate '0'
	option maxretry '3'

config anonymous 'anonymous'
	option username 'ftp'
	option umask '022'
	option maxrate '0'
	option enabled '1'
	option root '/mnt/'
	option writemkdir '1'
	option upload '1'
	option others '1'

config log 'log'
	option syslog '0'
	option xreflog '1'
	option file '/var/log/vsftpd.log'

config vuser 'vuser'
	option enabled '0'
	option username 'ftp'

